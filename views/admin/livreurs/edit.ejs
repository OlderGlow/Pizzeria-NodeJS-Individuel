<%- include('../../layout.ejs') %>

<div class="row">

    <div class="col-8 mt-3">
        <a href="/admin/livreurs">Retour à l'administration des livreurs</a>
        <div class="d-flex justify-content-center align-items-center">
            <form class="mt-5" method="POST">

                <% if (error) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                <% } %>

                <!-- First Name input -->
                <div class="form-outline mb-4">
                    <input type="text" name="firstName" class="form-control" placeholder="Prénom"
                           value="<%= livreur.firstName %>"/>
                </div>

                <!-- Last Name input -->
                <div class="form-outline mb-4">
                    <input type="text" name="lastName" class="form-control" placeholder="Nom"
                           value="<%= livreur.lastName %>"/>
                </div>
                <!-- Email input -->
                <div class="form-outline mb-4">
                    <input type="email" name="email" class="form-control" placeholder="E-mail"
                           value="<%= livreur.email %>"/>
                </div>


                <!-- Submit button -->
                <button type="submit" class="btn btn-success w-100 p-3 mb-4">Modifier le livreur</button>

            </form>
        </div>
    </div>
    <div class="col-4 mt-5 d-flex justify-content-end">
        <%- include('../../sidebar.ejs') %>
    </div>
</div>
</div>
</body>
</html>